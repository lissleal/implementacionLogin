<h1>Lista de Productos en base de datos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <form action="/api/prod/update/{{this._id}}" method="post">
          <td><input type="text" name="title" value="{{this.title}}" /></td>
          <td><input
              type="text"
              name="description"
              value="{{this.description}}"
            /></td>
          <td><input type="number" name="price" value="{{this.price}}" /></td>
          <td>
            <button type="submit">Actualizar</button>
          </td>
        </form>
        <form action="/api/prod/delete/{{this._id}}" method="post">
          <input type="hidden" name="_method" value="DELETE" />
          <td>
            <button type="submit">Eliminar</button>
          </td>

        </form>
      </tr>
    {{/each}}
  </tbody>
</table>

<a href="/inicio"><h2>Volver al inicio</h2></a>

