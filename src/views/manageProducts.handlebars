<h1>Lista de Productos en base de datos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <form
          action="/api/products/update/{{this._id}}?_method=PUT"
          method="POST"
        >
          <input type="hidden" name="_method" value="PUT" />
          <td><input type="text" name="name" value="{{this.name}}" /></td>
          <td><input
              type="text"
              name="description"
              value="{{this.description}}"
            /></td>
          <td><input type="number" name="price" value="{{this.price}}" /></td>
          <td><input
              type="category"
              name="category"
              value="{{this.category}}"
            /></td>
          <td><input type="number" name="stock" value="{{this.stock}}" /></td>
          <td><input
              type="text"
              name="thumbnail"
              value="{{this.thumbnail}}"
            /></td>
          <td>
            <button type="submit">Actualizar</button>
          </td>
        </form>
        <form
          action="/api/products/delete/{{this._id}}?_method=DELETE"
          method="POST"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <td>
            <button type="submit">Eliminar</button>
          </td>

        </form>
      </tr>
    {{/each}}
  </tbody>
</table>

<a href="/inicio"><h2>Volver al inicio</h2></a>

